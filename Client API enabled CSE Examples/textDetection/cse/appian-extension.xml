<?xml version="1.0" encoding="UTF-8"?>
<appian-extension name="textDetection" key="text.detection">
  <extension-info>
    <description>Detects text in user supplied images</description>
    <vendor name="Appian" url="http://www.appian.com" />
    <version>1.0</version>
  </extension-info>

  <!-- Add a new component with every version you create -->
  <!-- This v1.0.0 component maps to the v1 folder -->
  <component ruleName="textDetection" key="text.detection.component" version="1.0.0">
    <supportedUserAgents>chrome</supportedUserAgents>
    <iconFile>textDetection.svg</iconFile>
    <parameter>
      <name>imageUrl</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>textFound</name>
      <category>event</category>
    </parameter>
    <parameter>
      <name>connectedSystem</name>
      <category>input-only</category>
      <type>ConnectedSystem</type>
    </parameter>
    <html-entry-point>index.html</html-entry-point>
    <sdk-version>2.0.0</sdk-version>
  </component>
</appian-extension>
