<?xml version="1.0" encoding="UTF-8"?>
<appian-extension name="Map SAIL Extension" key="sample.map">
  <extension-info>
    <description>Provides a Map SAIL Extension backed by Google Maps</description>
    <vendor name="Appian" url="http://www.appian.com" />
    <version>1.0</version>
  </extension-info>

  <component name="Google Map Component" key="google.map">
    <ruleName>mapField</ruleName>
    <iconFile>google-maps.svg</iconFile>
    <parameter>
      <name>location</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>pin</name>
      <category>event</category>
    </parameter>
    <html-entry-point>index.html</html-entry-point>
  </component>
</appian-extension>
